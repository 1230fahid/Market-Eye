@page "/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

<section class="registration">
	<img class="picture" src="https://images.unsplash.com/photo-1640451859877-1374a1155215?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTZ8fHN0b2NrJTIwbWFya2V0fGVufDB8fDB8fHww&auto=format&fit=crop" />
	<div class="register">
		<form class="form-register" method="post">
			<h3 class="title" style="text-align:center; font-weight:200; color: #E6BE8A; font-size:xx-large;">User Registration</h3>
			<!--<label class="reg-label" for="#email">Email Address</label>
			<input class="reg-input" type="email" id="email" placeholder="Email..." />-->
            <label asp-for="Input.Email" class="reg-label" for="#user">Username (Email)</label>
            <input asp-for="Input.Email" class="reg-input-email" type="text" id="user" placeholder="Username..." required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <label asp-for="Input.Password" class="reg-label" for="#pass">Password</label>
            <div class="password">
                <input asp-for="Input.Password" class="reg-input" type="password" id="pass" placeholder="Password..." required />
                <i class="vis-checkbox far fa-eye" id="togglePassword" style="cursor: pointer;" onclick="toggle(document.getElementById('pass'))"></i>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <label asp-for="Input.ConfirmPassword" class="reg-label" for="#connpass">Confirm Password</label>
            <div class="password">
                <input asp-for="Input.ConfirmPassword" class="reg-input" type="password" id="connpass" placeholder="Password..." required />
                <i class="vis-checkbox far fa-eye" id="togglePassword" style="cursor: pointer;" onclick="toggle(document.getElementById('connpass'))"></i>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			<br />
			<div class="reg-button">
				<button type="submit" class="reg-btn">Register</button>
			</div>
            <p class="reg-label">
                Already have account? <a asp-area="Identity" asp-page="/Account/Login">Sign in here!</a>
            </p>
		</form>
	</div>
</section>


